<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminCreateConditionsInCartPriceRuleActionGroup" extends="AdminCreateCartPriceRuleActionGroup">
        <annotations>
            <description>EXTENDS: AdminCreateCartPriceRuleActionGroup. Adds the 2 provided Conditions (Name, Rule, Rule to Change and Category Name) to a Cart Price Rule.</description>
        </annotations>
        <arguments>
            <argument name="condition1" type="string" defaultValue="Products subselection"/>
            <argument name="condition2" type="string" defaultValue="Category"/>
            <argument name="ruleToChange1" type="string" defaultValue="..."/>
            <argument name="rule1" type="string" defaultValue="1"/>
            <argument name="ruleToChange2" type="string" defaultValue="..."/>
            <argument name="category" type="string" defaultValue="_defaultCategory.name"/>
        </arguments>
        <remove keyForRemoval="clickSaveButton"/>
        <remove keyForRemoval="waitForSuccessMessage"/>
        <remove keyForRemoval="seeSuccessMessage"/>
        <conditionalClick selector="{{AdminCartPriceRulesFormSection.conditionsHeader}}" dependentSelector="{{AdminCartPriceRulesFormSection.conditionsHeader}}" visible="true" stepKey="clickToExpandConditions"/>
        <click selector="{{AdminCartPriceRulesFormSection.addCondition('1')}}" stepKey="addFirstCondition"/>
        <selectOption selector="{{AdminCartPriceRulesFormSection.ruleCondition('1')}}" userInput="{{condition1}}" stepKey="selectRule"/>
        <click selector="{{AdminCartPriceRulesFormSection.ruleParameter(ruleToChange1)}}" stepKey="clickToChangeRule1"/>
        <fillField selector="{{AdminCartPriceRulesFormSection.ruleParameterInput('1--1')}}" userInput="{{rule1}}" stepKey="fillRule"/>
        <click selector="{{AdminCartPriceRulesFormSection.addCondition('1--1')}}" stepKey="addSecondCondition"/>
        <selectOption selector="{{AdminCartPriceRulesFormSection.ruleCondition('1--1')}}" userInput="{{condition2}}" stepKey="selectSecondCondition"/>
        <click selector="{{AdminCartPriceRulesFormSection.ruleParameter(ruleToChange2)}}" stepKey="addThirdCondition"/>
        <fillField selector="{{AdminCartPriceRulesFormSection.ruleParameterInput('1--1--1')}}" userInput="{{category}}" stepKey="fillRuleForSecondCondition"/>
        <waitForElementClickable selector="{{AdminCartPriceRulesFormSection.save}}" stepKey="waitToClickSaveButtonWithCondition"/>
        <click selector="{{AdminCartPriceRulesFormSection.save}}" stepKey="clickSaveButtonWithCondition"/>
        <waitForText selector="{{AdminCartPriceRulesSection.messages}}" userInput="You saved the rule." stepKey="seeSuccessMessageForCondition"/>
    </actionGroup>
</actionGroups>
