<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminCreateConditionsInCartPriceRuleActionGroup" extends="AdminCreateCartPriceRuleWithConditionsActionGroup">
        <annotations>
            <description>EXTENDS: AdminCreateCartPriceRuleActionGroup. Adds the 2 provided Conditions (Name, Rule, Rule to Change and Category Name) to a Cart Price Rule.</description>
        </annotations>
        <remove keyForRemoval="waitForCategoryVisible"/>
        <remove keyForRemoval="checkCategoryName"/>
        <click selector="{{AdminCartPriceRulesFormSection.save}}" stepKey="clickSaveButtonWithCondition"/>
        <waitForText selector="{{AdminCartPriceRulesSection.messages}}" userInput="You saved the rule." stepKey="seeSuccessMessageForCondition"/>
    </actionGroup>
</actionGroups>
