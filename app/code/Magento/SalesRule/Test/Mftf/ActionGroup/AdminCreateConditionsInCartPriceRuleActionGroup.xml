<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminCreateConditionsInCartPriceRuleActionGroup" extends="AdminCreateCartPriceRuleActionGroup">
        <annotations>
            <description>EXTENDS: AdminCreateCartPriceRuleActionGroup. Adds the 2 provided Conditions (Name, Rule, Rule to Change and Category Name) to a Cart Price Rule.</description>
        </annotations>
        <arguments>
            <argument name="condition1" type="string" defaultValue="Products subselection"/>
            <argument name="condition2" type="string" defaultValue="Category"/>
            <argument name="ruleToChange1" type="string" defaultValue="..."/>
            <argument name="rule1" type="string" defaultValue="1"/>
            <argument name="ruleToChange2" type="string" defaultValue="..."/>
            <argument name="category" type="string" defaultValue="_defaultCategory.name"/>
        </arguments>
    </actionGroup>
</actionGroups>
