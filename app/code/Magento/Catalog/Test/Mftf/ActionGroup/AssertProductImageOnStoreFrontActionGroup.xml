<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AssertProductImageOnStoreFrontActionGroup">
        <annotations>
            <description>Validates that the provided Product Image is present.</description>
        </annotations>
        <arguments>
            <argument name="image" defaultValue="MagentoLogo"/>
        </arguments>
        <waitForElement selector="{{StorefrontProductMediaSection.imageFileInGallery(image.filename)}}" stepKey="waitForImage"/>
        <seeElement selector="{{StorefrontProductMediaSection.imageFileInGallery(image.filename)}}" stepKey="seeImage"/>
    </actionGroup>
</actionGroups>
