<actionGroups xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:mftf:Test/etc/actionGroupSchema.xsd">
    <actionGroup name="AdminCreateOptionsForAttributeMultiStockActionGroup" extends="GenerateConfigurationsByAttributeCodeActionGroup">
        <annotations>
            <description>Generates configurable variations based on attribute code and source.</description>
        </annotations>
        <arguments>
            <argument name="sourceCode" type="string" defaultValue="{{_defaultSource.source_code}}"/>
            <argument name="sourceQty" type="string" defaultValue="{{defaultProductQty.value}}"/>
        </arguments>
        <remove keyForRemoval="enterAttributeQuantity"/>
        <waitForElementClickable selector="{{AdminConfigurableProductAssignSourcesSlideOut.assignSources}}" stepKey="waitToClickAssignSource" after="clickOnApplySingleQuantityToEachSku"/>
        <click selector="{{AdminConfigurableProductAssignSourcesSlideOut.assignSources}}" stepKey="clickOnAssignSources" after="waitToClickAssignSource"/>
        <conditionalClick selector="{{AdminGridFilterControls.clearSources}}" dependentSelector="{{AdminGridFilterControls.clearSources}}" visible="true" stepKey="clickClearFilters" after="clickOnAssignSources"/>
        <waitForPageLoad stepKey="waitForPageLoad" after="clickClearFilters"/>
        <waitForElementClickable selector="{{AdminGridFilterControls.filters}}" stepKey="waitToClickFilter" after="waitForFilters"/>
        <click selector="{{AdminGridFilterControls.filters}}" stepKey="clickOnFilters" after="waitToClickFilter"/>
        <waitForElementVisible selector="{{AdminManageSourcesGridFilterControls.code}}" stepKey="waitToClickSourceCode" after="clickOnFilters"/>
        <fillField userInput="{{sourceCode}}" selector="{{AdminManageSourcesGridFilterControls.code}}" stepKey="fillSourceCodeField" after="waitToClickSourceCode"/>
        <waitForElementClickable selector="{{AdminGridFilterControls.applyFilters}}" stepKey="waitToClickOnApplyFilters" after="fillSourceCodeField"/>
        <click selector="{{AdminGridFilterControls.applyFilters}}" stepKey="clickOnApplyFilters" after="waitToClickOnApplyFilters"/>
        <waitForElementClickable selector="{{AdminGridRow.checkboxByValue(sourceCode)}}" stepKey="waitToSelectSource" after="clickOnApplyFilters"/>
        <click selector="{{AdminGridRow.checkboxByValue(sourceCode)}}" stepKey="selectSource" after="clickOnApplyFilters"/>
        <waitForElementClickable selector="{{AdminConfigurableProductAssignSourcesSlideOut.done}}" stepKey="waitToClickOnDone" after="selectSource"/>
        <click selector="{{AdminConfigurableProductAssignSourcesSlideOut.done}}" stepKey="done" after="waitToClickOnDone"/>
        <waitForElementVisible selector="{{AdminConfigurableProductAssignSourcesSlideOut.quantityPerSourceForMultiMode}}" stepKey="waitForQtyFieldToBecomeEnabled" after="done"/>
        <fillField selector="{{AdminConfigurableProductAssignSourcesSlideOut.quantityPerSourceForMultiMode}}" userInput="{{sourceQty}}" stepKey="fillQuantity" after="waitForQtyFieldToBecomeEnabled"/>
    </actionGroup>
</actionGroups>